package main;

import java.util.Scanner;

import library.BookMenu;
import manager.User_Manager;

public class MainMenu {

	public static void main(String[] args) {
		
		Scanner sc=new Scanner(System.in);
		while(true)
		{
			System.out.println("---------- Library System Menu----------");
			System.out.println("1. Register");
			System.out.println("2. Login");
			System.out.println("3. Book operations");
			System.out.println("4. Exit");
			System.out.println("Choose an option: ");
			int option=sc.nextInt();
			
			switch(option)
			{
			case 1: User_Manager.register(sc);
			         break;
			case 2: 
				int reg=User_Manager.login(sc);
				if(reg!=-1)
				{
					System.out.println("Redirecting to menu...");
				}
				break;
				
			case 3: 
				BookMenu.bookMenu(sc);
				break;
				
			case 4: 
				System.out.println("Thank you...");
				return;
			default: System.out.println("Invalid option found!!...Please select valid option");
			         break;
			}
		}
	}

}
